<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.PMTsDetalhes"
             Title="PMTsDetalhes"
             Shell.NavBarIsVisible="True">
    <Shell.TitleView>
        <Grid Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Text="ServiÃ§os"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <Image Source="pontoslogin.png" WidthRequest="30"
                   HeightRequest="30"
                   Grid.Column="1"
                   VerticalOptions="Center"
                   HorizontalOptions="End">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Image.GestureRecognizers>
            </Image>
        </Grid>
    </Shell.TitleView>
    <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout BackgroundColor="#00deff" Spacing="260" Margin="0,0,0,0">
                <Label x:Name="User"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
                <HorizontalStackLayout Spacing="6">
                    <Image Source="site2.png">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_1"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="unnamed.png">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_2"/>
                        </Image.GestureRecognizers>
                    </Image>
                </HorizontalStackLayout>
            </HorizontalStackLayout>


            <StackLayout x:Name="StackDetalhesPMTs" BackgroundColor="LightGray">
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>