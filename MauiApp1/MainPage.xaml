<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             BackgroundImageSource="fundo_login.png">

    <Grid>
        <Image Source="pontoslogin.png"
               HorizontalOptions="End"
               VerticalOptions="Start"
               HeightRequest="40"
               ZIndex="0">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Image.GestureRecognizers>
        </Image>

        <ScrollView>
            <FlexLayout Direction="Column"
                        JustifyContent="Center"
                        AlignItems="Center"
                        Padding="20">

                <Image Source="gh_logo.png"
                       WidthRequest="250"       HeightRequest="125"      Aspect="AspectFit"
                       HorizontalOptions="Center"
                       Margin="0,0,0,0" />

                <HorizontalStackLayout Spacing="10">
                    <Image Source="utilizador.png" />
                    <Frame BorderColor="Transparent"
                           Padding="0"
                           HasShadow="False"
                           WidthRequest="300"
                           HeightRequest="40"
                           BackgroundColor="White">
                        <StackLayout>
                            <Entry
                                x:Name="UsernameEntry"
                                Placeholder="Login AD"
                                PlaceholderColor="Gray"
                                BackgroundColor="Transparent"/>
                        </StackLayout>
                    </Frame>
                </HorizontalStackLayout>

                <HorizontalStackLayout Margin="0,10,0,0" Spacing="10">
                    <Image Source="password.png" />
                    <Frame BorderColor="Transparent"
                           Padding="0"
                           HasShadow="False"
                           WidthRequest="300"
                           HeightRequest="40"
                           BackgroundColor="White">
                        <Entry
                            x:Name="PasswordEntry"
                            Placeholder="Password"
                            IsPassword="True"
                            PlaceholderColor="Gray"
                            BackgroundColor="Transparent"/>
                    </Frame>
                </HorizontalStackLayout>

                <Button Text="ENTRAR"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        BorderWidth="1"
                        BorderColor="Green"
                        WidthRequest="350"
                        HeightRequest="40"
                        FontSize="16"
                        Margin="0,3,0,0"
                        Clicked="Button_Clicked"/>

                <HorizontalStackLayout Spacing="10" Padding="10">
                    <Label Text="Lembrar-me?"
                           TextColor="White"
                           FontAttributes="Bold,Italic"
                           Margin="0,12,0,0"
                           FontSize="Medium"/>
                    <Switch x:Name="RememberMeSwitch" OnColor="Green"
                            ThumbColor="White"
                            Margin="0,0,0,0"
                            WidthRequest="60"
                            Scale="1.5"
                            Toggled="RememberMeSwitch_Toggled"/>
                </HorizontalStackLayout>

                <Button Text="Entidade não selecionada"
                        x:Name="NomeBotao"
                        TextColor="White"
                        FontSize="17"
                        Margin="0,10,0,0"
                        BackgroundColor="Transparent"
                        Clicked="OnMostrarEntidadesClicked"/>
                <Button IsVisible="False"
                        x:Name="AuthTypeLabel"
                        Clicked="AuthTypeLabel_Clicked"
                        BackgroundColor="Transparent">

                </Button>
            </FlexLayout>
        </ScrollView>
    </Grid>
</ContentPage>